.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#", :target => "_blank"} Bearded Shame
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          - if current_user.try(:type) == "Worker"
            = link_to "Click Me", workers_path
          - elsif current_user.try(:type) == 'Employer'
            = link_to "Click Me", employers_path
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          - if current_user
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span.glyphicon.glyphicon-user>
              %strong= current_user.first_name
              %span.glyphicon.glyphicon-chevron-down
            %ul.dropdown-menu
              %li= link_to "logout", destroy_user_session_path, method: :delete
          - else
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span.glyphicon.glyphicon-user>
              %strong Guest
              %span.glyphicon.glyphicon-chevron-down
            %ul.dropdown-menu
              %li= link_to "Sign In", new_user_session_path
